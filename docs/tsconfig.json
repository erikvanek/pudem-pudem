{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "lib": ["es2017"],
        "paths": {
            "*": ["./docs"]
        },
        "typeRoots": ["./node_modules", "./@types", "./"]
    }
}
